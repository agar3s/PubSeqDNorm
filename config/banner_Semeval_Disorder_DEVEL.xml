<?xml version="1.0" encoding="iso-8859-1"?>
<banner-configuration>
  <banner>
    <eval>
      <datasetName>banner.eval.dataset.ClinicalDataset</datasetName>
      <rawInput>
      	<dataFolder>rawdata/devel</dataFolder>
        <sentenceFilename>data/devel/bannerDevel.txt</sentenceFilename>
        <mentionTestFilename>data/devel/bannerDevelTag.txt</mentionTestFilename>
        <segmentModel>output/clinical.model</segmentModel>
      </rawInput>
      <dataset>
        <sentenceFilename>data/devel/bannerDevel.txt</sentenceFilename>
        <mentionTestFilename>data/devel/bannerDevelTag.txt</mentionTestFilename>
        <mentionAlternateFilename>data/devel/ALTGENE.eval</mentionAlternateFilename>
      </dataset>
      <idInputFilename>output/idsDevel.txt</idInputFilename>
      <rawInputFilename>output/rawDevel.txt</rawInputFilename>
      <trainingInputFilename>output/bannerDevel.txt</trainingInputFilename>
      <outputFilename>output/outputDevel.txt</outputFilename>
      <inContextAnalysisFilename>output/contextAnalysisDevel.html</inContextAnalysisFilename>
      <mentionFilename>output/bannerTagDevel.txt</mentionFilename>
      <modelFilename>output/model_TRAIN_DIS_NOOVERLAP_V0.bin</modelFilename>
      <lemmatiserDataDirectory>nlpdata/lemmatiser</lemmatiserDataDirectory>
      <posTaggerDataDirectory>nlpdata/tagger</posTaggerDataDirectory>
      <posTagger>dragon.nlp.tool.HeppleTagger</posTagger>
      <tokenizer>banner.tokenization.SimpleTokenizer</tokenizer>
      <useParenthesisPostProcessing>true</useParenthesisPostProcessing>
      <useLocalAbbreviationPostProcessing>true</useLocalAbbreviationPostProcessing>
      <useNumericNormalization>true</useNumericNormalization>
      <tagFormat>IO</tagFormat>
      <crfOrder>1</crfOrder>
      <textDirection>Forward</textDirection>
      <mentionTypes>Required</mentionTypes>
      <sameTypeOverlapOption>Raw</sameTypeOverlapOption>
      <differentTypeOverlapOption>Raw</differentTypeOverlapOption>
      <dictionaryTagger>banner.tagging.dictionary.UMLSMetathesaurusDictionaryTagger_2013AA</dictionaryTagger>
    </eval>
    <tagging>
      <dictionary>
        <UMLSMetathesaurusDictionaryTagger_2013AA>
          <filterContainedMentions>true</filterContainedMentions>
          <normalizeMixedCase>true</normalizeMixedCase>
          <normalizeDigits>true</normalizeDigits>
          <generate2PartVariations>true</generate2PartVariations>
          <dropEndParentheticals>false</dropEndParentheticals>
          <dirWithMRSTY>META</dirWithMRSTY>
          <dirWithMRCONSO>META</dirWithMRCONSO>
          <allowedLang>ENG</allowedLang>
          <allowedSupp>N</allowedSupp>
          <types>
            <name>T019</name>
            <name>T020</name>
            <name>T037</name>            
            <name>T046</name>
            <name>T047</name>
            <name>T048</name>
            <name>T049</name>
            <name>T050</name>
            <name>T184</name>
            <name>T190</name>
            <name>T191</name>
            <mapTo>DISORDER</mapTo>
          </types>
        </UMLSMetathesaurusDictionaryTagger_2013AA>
      </dictionary>
    </tagging>
  </banner>
</banner-configuration>
