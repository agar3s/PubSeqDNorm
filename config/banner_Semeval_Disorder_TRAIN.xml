<?xml version="1.0" encoding="iso-8859-1"?>
<banner-configuration>
  <banner>
    <eval>
      <datasetName>banner.eval.dataset.ClinicalDataset</datasetName>
      <rawInput>
      	<dataFolder>rawdata/train</dataFolder>
        <sentenceFilename>data/train/bannerTrain.txt</sentenceFilename>
        <mentionTestFilename>data/train/bannerTag.txt</mentionTestFilename>
        <segmentModel>output/clinical.model</segmentModel>
      </rawInput>
      <dataset>
        <sentenceFilename>data/train/bannerTrain.txt</sentenceFilename>
        <mentionTestFilename>data/train/bannerTag.txt</mentionTestFilename>
        <mentionAlternateFilename>data/train/ALTGENE.eval</mentionAlternateFilename>
      </dataset>
      <idInputFilename>output/ids.txt</idInputFilename>
      <rawInputFilename>output/raw.txt</rawInputFilename>
      <trainingInputFilename>output/bannerTrain.txt</trainingInputFilename>
      <outputFilename>output/output.txt</outputFilename>
      <inContextAnalysisFilename>output/contextAnalysis.html</inContextAnalysisFilename>
      <mentionFilename>output/bannerTag.txt</mentionFilename>
      <modelFilename>output/model_TRAIN_DIS_NOOVERLAP_V0.bin</modelFilename>
      <lemmatiserDataDirectory>nlpdata/lemmatiser</lemmatiserDataDirectory>
      <posTaggerDataDirectory>nlpdata/tagger</posTaggerDataDirectory>
      <posTagger>dragon.nlp.tool.HeppleTagger</posTagger>
      <tokenizer>banner.tokenization.SimpleTokenizer</tokenizer>
      <useParenthesisPostProcessing>true</useParenthesisPostProcessing>
      <useLocalAbbreviationPostProcessing>true</useLocalAbbreviationPostProcessing>
      <useNumericNormalization>true</useNumericNormalization>
      <tagFormat>IO</tagFormat>
      <crfOrder>1</crfOrder>
      <textDirection>Forward</textDirection>
      <mentionTypes>Required</mentionTypes>
      <sameTypeOverlapOption>Union</sameTypeOverlapOption>
      <differentTypeOverlapOption>Exception</differentTypeOverlapOption>
      <dictionaryTagger>banner.tagging.dictionary.UMLSMetathesaurusDictionaryTagger_2013AA</dictionaryTagger>
      <TrainSynonymMatrix>                 
		<medicFilename>data/CTD_disorder.tsv</medicFilename> 
		<abbreviationsFilename>data/ClinicalSenseInventoryI_MasterFile.txt</abbreviationsFilename> 
		<maxRank>1000</maxRank>
		<lambda>0.001</lambda>
		<maxIterations>50</maxIterations> 
		<holdoutConfigurationFile>config/banner_Semeval_Disorder_DEVEL.xml</holdoutConfigurationFile>
		<matrixFilename>output/simmatrix_IO.bin</matrixFilename>
      </TrainSynonymMatrix>
    </eval>
    <tagging>
      <dictionary>
        <UMLSMetathesaurusDictionaryTagger_2013AA>
          <filterContainedMentions>true</filterContainedMentions>
          <normalizeMixedCase>true</normalizeMixedCase>
          <normalizeDigits>true</normalizeDigits>
          <generate2PartVariations>true</generate2PartVariations>
          <dropEndParentheticals>false</dropEndParentheticals>
          <dirWithMRSTY>META</dirWithMRSTY>
          <dirWithMRCONSO>META</dirWithMRCONSO>
          <allowedLang>ENG</allowedLang>
          <allowedSupp>N</allowedSupp>
          <types>
            <name>T019</name>
            <name>T020</name>
            <name>T037</name>            
            <name>T046</name>
            <name>T047</name>
            <name>T048</name>
            <name>T049</name>
            <name>T050</name>
            <name>T184</name>
            <name>T190</name>
            <name>T191</name>
            <mapTo>DISORDER</mapTo>
          </types>
        </UMLSMetathesaurusDictionaryTagger_2013AA>
      </dictionary>
    </tagging>
  </banner>
</banner-configuration>
